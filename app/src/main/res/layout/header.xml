<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@color/headerNormal"
    android:paddingEnd="10dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnNewEntry"
            android:layout_gravity="start|center_vertical"
            android:drawableTop="@drawable/ic_plus"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="true"
            android:textSize="14sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#fff7fcff"
            android:background="@drawable/button_custom"
            android:enabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Entrada"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnNewExit"
            android:layout_gravity="start|center_vertical"
            android:drawableTop="@drawable/ic_minus"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="true"
            android:textSize="14sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#fff7fcff"
            android:background="@drawable/button_custom"
            android:enabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Sortida"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="2dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="false"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="OcupaciÃ³"
            android:id="@+id/txtOccupationInfo"
            android:textSize="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"
            android:textColor="#fffffcff"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10"
            android:id="@+id/txtOccupation"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fff7fcff" />
    </LinearLayout>

</RelativeLayout>